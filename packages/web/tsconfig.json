{
	"extends": ["../../tsconfig.json"],
	"include": ["**/*", "**/.server/**/*", "**/.client/**/*", ".react-router/types/**/*"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node", "vite/client"],
		"target": "ES2022",
		"module": "ES2022",
		"rootDirs": [".", "./.react-router/types"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	}
}
